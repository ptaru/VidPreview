CompileFlags:
  Add:
    - "-x"
    - "objective-c++"
    - "-std=c++17"
    - "-stdlib=libc++"
    - "-fmodules"
    - "-fcxx-modules"
    - "-isysroot"
    - "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk"
    - "-IVidCore/Frameworks/FFmpeg/include"
    - "-IVidCore/Demuxing"
    - "-IVidCore/Decoding"
    - "-IVidCore/Rendering"
    - "-IVidCore/Playback"
    - "-IVidCore/Buffers"
    - "-IVidCore/Types"
    - "-fobjc-arc"
    - "-D__STDC_CONSTANT_MACROS"
    - "-D__STDC_LIMIT_MACROS"
    - "-Wno-unknown-warning-option"
  Remove:
    - "-W*"

Index:
  Background: Skip

Diagnostics:
  UnusedIncludes: None
  MissingIncludes: Strict
