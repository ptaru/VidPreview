CompileFlags:
  Add:
    # Project include paths (source directories)
    - "-I${workspaceFolder}/VidCore"
    - "-I${workspaceFolder}/VidCore/Decoding"
    - "-I${workspaceFolder}/VidCore/Demuxing"
    - "-I${workspaceFolder}/VidCore/Rendering"
    # Include paths for FFmpeg
    - "-I${workspaceFolder}/VidCore/Frameworks/FFmpeg/include"
    # Objective-C/C++ support
    - "-x"
    - "objective-c++"
    - "-std=c++17"
    - "-fobjc-arc"
    # macOS SDK and frameworks
    - "-isysroot"
    - "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk"
    - "-F/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
    # Common defines
    - "-DDEBUG=1"
    # Disable error limit (prevents "Too many errors" message)
    - "-ferror-limit=0"
    # Suppress warnings
    - "-Wno-nullability-completeness"
    - "-Wno-availability"
    - "-Wno-elaborated-enum-base"
    - "-Wno-everything"
  Remove:
    - "-fmodules"
    - "-fcxx-modules"

Diagnostics:
  Suppress:
    - "*"
  UnusedIncludes: None
  MissingIncludes: None
  ClangTidy:
    Remove:
      - "*"

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes
